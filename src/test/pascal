grammar Pascal;

@header \{

\}

FP_DECLARATION :
    FUNCTION FP_DECLARATION
    |
    PROCEDURE FP_DECLARATION
    |
    EPS
    ;

FUNCTION :
    KEYWORD_FUNCTION SIGNATURE COLON WORD SEMICOLON
    ;

PROCEDURE :
    KEYWORD_PROCEDURE SIGNATURE SEMICOLON
    ;

SIGNATURE :
    WORD OPEN_BRACKET DECLARATIONS CLOSE_BRACKET
    ;

DECLARATIONS :
    DECLARATION DECLARATIONS_SUFFIX
    |
    EPS
    ;

DECLARATION :
    VAR_DECLARATION
    |
    SIMPLE_DECLARATION
    ;

VAR_DECLARATION :
    KEYWORD_VAR SIMPLE_DECLARATION
    ;

SIMPLE_DECLARATION :
    NAMES COLON WORD
    ;

NAMES :
    WORD NAMES_SUFFIX
    ;

NAMES_SUFFIX :
    COMMA NAMES
    |
    EPS
    ;

DECLARATIONS_SUFFIX :
    SEMICOLON DECLARATIONS
    |
    EPS
    ;

KEYWORD_VAR : '\\bvar\\b';
KEYWORD_FUNCTION : '\\bfunction\\b';
KEYWORD_PROCEDURE : '\\bprocedure\\b';

COLON: '\\:';
SEMICOLON : '\\;';
COMMA : '\\,';

OPEN_BRACKET : '\\(';
CLOSE_BRACKET : '\\)';

WORD : '[a-zA-Z][a-zA-Z0-9]*';
